<% layout('./layout/base') %>
<div id="map" class="mt-2" style="width:100%; height: 500px"></div>
<h1>All camps</h1>
<div>
  <a href="/camps/new">Add camp</a>
</div>
<% for (let camp of camps){%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" alt="" src="<%=camp.images[0].url%>" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= camp.location%></small>
        </p>
        <a class="btn btn-primary" href="/camps/<%=camp._id%>">View <%=camp.title%></a>
      </div>
    </div>
  </div>
</div>
<% }%>
<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const camps = {
    features: <%- JSON.stringify(camps) %>
  }
</script>

<script src="/js/clusterMap.js"></script>